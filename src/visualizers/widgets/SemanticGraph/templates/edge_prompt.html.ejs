<div class="modal fade node-modal" id="edge-prompt" role="dialog" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                <span>&times;</span>
                </button>
                <h4 class="modal-title" id="modalLabelSmall">title</h4>
            </div>
            <div class="modal-body">
                <form id="edge-prompt-form" action="javascript:void(0);">
                    <div><label for="relation">Select relation</label></div>
                    <div style="margin-right: 15px;" class="btn-group hierarchy-select" 
                         ata-resize="auto" id="relation-dropdown">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                            <span class="selected-label pull-left">&nbsp;</span>
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <div class="dropdown-menu open">
                            <div class="hs-searchbox">
                                <input type="text" class="form-control" autocomplete="off">
                            </div>
                            <ul class="dropdown-menu inner" role="menu">
                                <% _.each(edge_types, function(item, key, list) { %>
                                    <li data-value="<%- key %>" data-level="<%- item[1] %>">
                                        <a href="#"><%- item[0] %></a>
                                    </li>
                                <% }); %>
                            </ul>
                        </div>
                        <input class="hidden hidden-field" name="relation" readonly="readonly" aria-hidden="true" type="text"/>
                    </div>
                    <button style="width: 80px;" type="button" id="select-button" class="btn btn-primary">Select</button>
                    
                    <div style="margin-top: 10px;"><label for="new-relation">Or specify new relation</label></div>
                    <input required="required" style="width: 459px; margin-right: 15px; display: inline-block;" class="form-control" 
                            id="new-relation" placeholder="as a child of what you select above">
                    <button style="width: 80px;" type="button" id="add-new-button" class="btn btn-warning">Add new</button>
                </form>
            </div>
        </div>
    </div>
</div>
